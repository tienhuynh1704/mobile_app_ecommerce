<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="30dp">
        <ImageView
            android:id="@+id/btn_back_profile_info"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_back"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thông tin cá nhân"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginEnd="30dp"/>
    </LinearLayout>

    <TextView android:text="Họ và tên" android:textStyle="bold" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="8dp"/>
    <EditText
        android:id="@+id/edt_profile_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Nhập họ tên"
        android:inputType="textPersonName"
        android:layout_marginBottom="20dp"/>

    <TextView android:text="Số điện thoại" android:textStyle="bold" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="8dp"/>
    <EditText
        android:id="@+id/edt_profile_phone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Nhập số điện thoại"
        android:inputType="phone"
        android:layout_marginBottom="20dp"/>

    <TextView android:text="Địa chỉ giao hàng mặc định" android:textStyle="bold" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="8dp"/>
    <EditText
        android:id="@+id/edt_profile_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="80dp"
        android:gravity="top|start"
        android:hint="Số nhà, đường, phường, quận..."
        android:layout_marginBottom="40dp"/>

    <Button
        android:id="@+id/btn_save_profile"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="LƯU THAY ĐỔI"
        android:textStyle="bold"
        android:backgroundTint="#000000"
        android:textColor="#FFFFFF"/>
</LinearLayout>